extends ../layout/index
block styles
  link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")
block contenido
  div
    h1(class="text-4xl my-10 font-extrabold text-center") Bienes
      span(class="font-normal") Raices
    h2(class="text-center text-2xl font-extrabold") #{title}

    div(class="bg-white shadow py-8 px-4 mx-auto max-w-4xl my-10")
      form(class="space-y-8")
        div(class="space-y-8")
          h3(class="text-lg leading-6 font-medium text-gray-900") Informaci칩n General
          p(class="text-gray-600") A침ade Informaci칩n sobre la propiedad

          div
            label(class="block text-sm uppercase text-gray-500 mb-2 font-bold" for="title") Titulo del anuncio
            input(id="title" type="title" name="title" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" placeholder="Titulo Propiedad, ej. Casa en la playa")

          div(class="md:flex md:gap-4 space-y-5 md:space-y-0")

            div(class="md:w-1/2")
              label(class="block text-sm uppercase text-gray-500 mb-2 font-bold" for="category") Categoria
              select(id="category" type="category" name="category" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400")
                option(value="") - Seleccione -

            div(class="md:w-1/2")
              label(class="block text-sm uppercase text-gray-500 mb-2 font-bold" for="price") Precio
              input(id="price" type="price" name="price" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" placeholder="Precio")


          div(class="md:flex md:gap-4 space-y-5 md:space-y-0")

            div(class="md:w-1/3")
              label(class="block text-sm uppercase text-gray-500 mb-2 font-bold" for="rooms") Habitaciones
              select(id="rooms" type="rooms" name="rooms" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400")
                option(value="") - Seleccione -
                - var n = 1;
                  while n < 5
                    option(value = n) #{n++}

            div(class="md:w-1/3")
              label(class="block text-sm uppercase text-gray-500 mb-2 font-bold" for="parking") Estacionamiento
              select(id="parking" type="parking" name="parking" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400")
                option(value="") - Seleccione -
                option(value="true") Si
                option(value="false") No 

            div(class="md:w-1/3")
              label(class="block text-sm uppercase text-gray-500 mb-2 font-bold" for="baths") Ba침os
              select(id="baths" type="baths" name="baths" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400")
                option(value="") - Seleccione -
                - var n = 1;
                  while n < 5
                    option(value = n) #{n++}

        div(id="mapa" class="h-96")

block scripts
    script(src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js")
    script(src="https://unpkg.com/esri-leaflet@3.0.8/dist/esri-leaflet.js")
    script(src="https://unpkg.com/esri-leaflet-geocoder@2.2.13/dist/esri-leaflet-geocoder.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/leaflet-geosearch/2.7.0/bundle.min.js")
    script(src="/js/maps.js")

