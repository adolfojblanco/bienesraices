extends ../layout/index
block contenido
  div
    h1(class="text-4xl my-10 font-extrabold text-center") Bienes
      span(class="font-normal") Raices
    h2(class="text-center text-2xl font-extrabold") #{title}

    if errores
      div(class="max-w-md mx-auto my-10")
        each error in errores
          p(class="bg-red-600 text-white uppercase text-xs text-center p-2 mb-1 font-bold") #{error.msg}


    div(class="mt-8 mx-auto max-w-md")
      div(class="bg-white py-8 px-4 shadow")
        form(class="space-y-5" action="/usuario/registrar" method="POST" noValidate)
          input(type="hidden" name="_csrf" value=csrfToken)
          div
            label(class="block text-sm uppercase text-gray-500 mb-2 font-bold" for="name") Tu Nombre
            input(id="name" type="text" name="name" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" placeholder="Tu Nombre" value= user ? user.name : '')

          div
            label(class="block text-sm uppercase text-gray-500 mb-2 font-bold" for="email") Tu Email
            input(id="email" type="email" name="email" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" placeholder="Tu Email" value= user ? user.email : '')

          div
            label(class="block text-sm uppercase text-gray-500 mb-2 font-bold" for="password") Tu Contraseña
            input(id="password" type="password" name="password" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" placeholder="Tu Contraseña")

          div
            label(class="block text-sm uppercase text-gray-500 mb-2 font-bold" for="password_repeat") Repite la contraseña
            input(id="password_repeat" type="password" name="password_repeat" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" placeholder="Tu Contraseña")
          
          div(class="flex items-center justify-between")
            a(href="/usuario/login" class="text-gray-500 text-xs ") ¿Ya tienes cuenta? Incia Sesión
            a(href="/usuario/restablecer" class="text-gray-500 text-xs ") Olvide Mi Contraseña
          
          input(type="submit" value="Crear Cuenta" class="w-full bg-indigo-600 text-white hover:bg-indigo-700 py-2 cursor-pointer rounded-md")