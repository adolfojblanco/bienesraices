extends ../layout/index
block contenido
  div
    h1(class="text-4xl my-10 font-extrabold text-center") Bienes
      span(class="font-normal") Raices
    h2(class="text-center text-2xl font-extrabold") #{title}

    if errores
      div(class="max-w-md mx-auto my-10")
        each error in errores
          p(class="bg-red-600 text-white uppercase text-xs text-center p-2 mb-1 font-bold") #{error.msg}

    div(class="mt-8 mx-auto max-w-md")
      div(class="bg-white py-8 px-4 shadow")
        form(class="space-y-5" method="POST")
          input(type="hidden" name="_csrf" value=csrfToken)
          div
            label(class="block text-sm uppercase text-gray-500 mb-2 font-bold" for="password") Nueva Contraseña
            input(id="password" type="password" name="password" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" placeholder="Nueva Contraseña")



          input(type="submit" value="Guardar Contraseña" class="w-full bg-indigo-600 text-white hover:bg-indigo-700 py-2 cursor-pointer rounded-md")